#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf " lock\n logout\n sleep\nﰇ restart\n襤 shutdown\nﴹ display off" | dmenu -i -p 'Action: ')" in
	' lock') lockscreen.sh ;; #lockscreen.sh / betterlockscreen -l
	' logout') kill -9 -1 ;;
	' sleep') lockscreen.sh & $ctl suspend-then-hibernate ;; #playerctl pause
	'ﰇ restart') $ctl reboot -i ;;
	'襤shutdown') $ctl poweroff -i ;;
	'ﴹ display off') xset dpms force off ;;
	*) exit 1 ;;
esac
