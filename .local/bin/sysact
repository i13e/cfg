#!/bin/sh
# A dmenu wrapper script for system functions.
case "$(readlink -f /sbin/init)" in
	*systemd*) ctl='systemctl' ;;
	*) ctl='loginctl' ;;
esac

case "$(printf "󰍁 lock\n󰍃 logout\n󰤄 sleep\n󰜉 restart\n󰐥 shutdown\n󰶐 display off" | dmenu -i -p 'Action: ')" in
	'󰍁 lock') slock ;;
	'󰍃 logout') sudo -A killall Xorg ;;
	'󰤄 sleep') slock $ctl suspend-then-hibernate ;;
	'󰜉 restart') $ctl reboot -i ;;
	'󰐥 shutdown') $ctl poweroff -i ;;
	'󰶐 display off') xset dpms force off ;;
	*) exit 1 ;;
esac
