#!/bin/sh
# for mic mute: https://askubuntu.com/questions/26068/how-do-you-mute-from-the-command-line/1163416#1163416
# dependencies: pactl, light, notify-send

case $1 in
volume)
	#SINK=$(pactl get-default-sink)
	value="${3:-5}"
	vol=$(pactl get-sink-volume @DEFAULT_SINK@ | awk '{print $5}' | cut -d% -f1)
	case $2 in
	up) [ "$vol" -ge 100 ] || pactl set-sink-volume @DEFAULT_SINK@ +"$value"% ;;
	down) pactl set-sink-volume @DEFAULT_SINK@ -"$value"% ;;
	mute) pactl set-sink-mute @DEFAULT_SINK@ toggle ;;
	get) ;;
	esac
	vol=$(pactl get-sink-volume @DEFAULT_SINK@ | awk '{print $5}' | cut -d% -f1)
	muted=$(pactl get-sink-mute @DEFAULT_SINK@ | awk '{print $2}')
	if [ "$vol" -le 25 ]; then
		notify-send -h string:x-canonical-private-synchronous:audio "奄 Volume: " -h int:value:"$vol"
	elif [ "$vol" -le 75 ]; then
		notify-send -h string:x-canonical-private-synchronous:audio "奔 Volume: " -h int:value:"$vol"
	elif [ "$muted" = yes ]; then
		notify-send -h string:x-canonical-private-synchronous:audio "婢 Muted: " -h int:value:"$vol"
	else
		notify-send -h string:x-canonical-private-synchronous:audio "墳 Volume: " -h int:value:"$vol"
	fi
	exit 0
	;;
mic)
	#SOURCE=$(pactl get-default-source)
	value="${3:-5}"
	vol=$(pactl get-source-volume @DEFAULT_SOURCE@ | awk '{print $5}' | cut -d% -f1)
	case $2 in
	up) [ "$vol" -ge 100 ] || pactl set-source-volume @DEFAULT_SOURCE@ +"$value"% ;;
	down) pactl set-source-volume @DEFAULT_SOURCE@ -"$value"% ;;
	mute) pactl set-source-mute @DEFAULT_SOURCE@ toggle ;;
	get) ;;
	esac
	vol=$(pactl get-source-volume @DEFAULT_SOURCE@ | awk '{print $5}' | cut -d% -f1)
	muted=$(pactl get-source-mute @DEFAULT_SOURCE@ | awk '{print $2}')
	if [ "$muted" = yes ]; then
		notify-send -h string:x-canonical-private-synchronous:mic " Mic Muted: " -h int:value:"$vol"
	else
		notify-send -h string:x-canonical-private-synchronous:mic " Mic Volume: " -h int:value:"$vol"
	fi
	exit 0
	;;
brightness)
	value="${3:-10}"
	case $2 in
	up) light -A "$value" ;;
	max) light -S 100 ;;
	down) light -U "$value" ;;
	min) light -S 0 ;;
	esac
	bright=$(light | cut -d. -f1)
	if [ "$bright" -le 25 ]; then
		notify-send -h string:x-canonical-private-synchronous:bright " Brightness: " -h int:value:"$bright"
	elif [ "$bright" -le 75 ]; then
		notify-send -h string:x-canonical-private-synchronous:bright " Brightness: " -h int:value:"$bright"
	else
		notify-send -h string:x-canonical-private-synchronous:bright " Brightness: " -h int:value:"$bright"
	fi
	exit 0
	;;
mpc)
	case $2 in
	up) mpc volume +"$value" ;;
	down) mpc volume -"$value" ;;
	esac
	vol=$(mpc volume | awk -F "\t|%|:" '{ print $2 }' | tr -d " ")
	#label="MPD"
	;;
*)
	echo "Not the right arguments: $1"
	exit 1
	;;
esac
