#!/bin/sh
[ -x /usr/bin/paru ] && [ -x /usr/bin/checkupdates ] && x="$(( $(paru -Qua | wc -l) + $(checkupdates | wc -l) ))"
if [ "$x" = 1 ] ; then
    echo "$x upstream update available" >&2
elif [ -n "$x" ] ; then
    echo "$x upstream updates available" >&2
    #echo "$updates" | sed 's|^|    |' >&2
else
    echo "warning: please install pacman-contrib and paru-bin (AUR) to use this function." >&2
fi
