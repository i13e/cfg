# see zathuraarc(5) for all configuration options
# https://pwmt.org/projects/zathura/documentation/
# https://pwmt.org/projects/girara/options/

# settings
set font             "Monospace 10"
set selection-notification   "true"
set selection-clipboard "clipboard"
set guioptions                 "sv"
set scroll-page-aware        "true"
set statusbar-basename       "true"
set window-title-basename    "true"
set recolor                  "true"
set recolor-keephue          "true"
set adjust-open          "best-fit"
set statusbar-h-padding        "10"
set statusbar-v-padding        "10"
set scroll-full-overlap      "0.01"
set scroll-step               "100"

include nord

# remaps
map u scroll half-up
map d scroll half-down
map D toggle_page_mode
map r reload
map R rotate
map K zoom in
map J zoom out
map i recolor
map p print
map g goto top
unmap f
map f toggle_fullscreen
map [fullscreen] f toggle_fullscreen
