# The keys NOT bound here by sxhkd are:
# The t thru p keys on the top row
# The f thru ; keys on the home row
# The b key on the bottom row (hides the bar in either case)

#
# wm independent hotkeys
#

# Terminal emulator
super + Return
	$TERMINAL
# Launcher
super + shift + Return
	dmenu_run -p 'Run: '
super + x
	kill `xdotool getwindowfocus getwindowpid`
super + shift + x
	kill -9 `xdotool getwindowfocus getwindowpid`
super + shift + f
	pcmanfm
#super + Caps_Lock
#	remaps
# Toggle redshift
super + r
	pkill -USR1 '^redshift$'
# Open $BROWSER
super + shift + b
	$BROWSER
# sysact
super + {_,shift +} {BackSpace, q}
    sysact.sh
#
# Function Keys unbound F1-F5,10,11,12
#

# Audiokeys
super + {F6,F7,F8,F9}
	media-control {stop,previous,play-pause,next}

#
# XF86 Keys
#

# Launch calculator
XF86{Calculator,LaunchB}
    qalculate-gtk
# Launch browser
XF86WWW
    $BROWSER
# Launch terminal
XF86DOS
    $TERMINAL
# Launch task manager
XF86TaskPane
    $TERMINAL -e btm
# Toggle redshift
XF86{Tools,KbdBrightnessDown}
	pkill -USR1 '^redshift$'
# Change display
XF86Display
	displayselect
# Re-run remaps script
XF86Favorites
    remaps & notify-send " Keyboard remapping…" "Re-running keyboard defaults for any newly plugged-in keyboards."
# Volume & Mic keys
{_,super +}XF86Audio{Mute,RaiseVolume,LowerVolume}
	levels {volume,mic} {mute,up,down}
# Toggle mic mute
XF86AudioMicMute
    levels mic mute
# Brightness Up/Down
{_,super +}XF86MonBrightness{Up,Down}
    levels brightness {up,max,down,min}
# Brightness Up/Down
{_, super +}XF86{HomePage,Explorer}
    levels brightness {up,max,down,min}
# Open system acions
XF86PowerOff
    sysact.sh
# Audiokeys
XF86Audio{Stop,Prev,Play,Next}
	media-control {stop,previous,play-pause,next}
XF86KbdBrightnessUp
    media-control stop
